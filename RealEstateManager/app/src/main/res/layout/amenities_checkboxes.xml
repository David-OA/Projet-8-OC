<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:columnCount="3">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_nearby_school"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"
        android:text="school"
        app:layout_row="0"
        app:layout_column="0"/>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_nearby_playground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"
        android:text="playgroud"
        app:layout_row="0"
        app:layout_column="1"/>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_nearby_shop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"
        android:text="shop"
        app:layout_row="0"
        app:layout_column="2"/>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_nearby_buses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"
        android:text="buses"
        app:layout_row="1"
        app:layout_column="0"/>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_nearby_subway"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"
        android:text="subway"
        app:layout_row="1"
        app:layout_column="1"/>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_nearby_park"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"
        android:text="park"
        app:layout_row="1"
        app:layout_column="2"/>

</androidx.gridlayout.widget.GridLayout>